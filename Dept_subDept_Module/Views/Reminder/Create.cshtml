@model Dept_subDept_Module.Models.Reminder
@{
    ViewData["Title"] = "Create";
}

<h2>Create Reminder</h2>

<form asp-action="Create">
    <div class="form-group">
        <label class="control-label">Recipient Email</label>
        <input asp-for="RecipientEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Reminder Date Time</label>
        <input asp-for="ReminderDateTime" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

