@model IEnumerable<Dept_subDept_Module.Models.Reminder>
@{
    ViewData["Title"] = "Index";
}

<h2>Reminders</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Create New Reminder</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Recipient Email</th>
            <th>Reminder Date-Time</th>
            <th>Is Sent</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.RecipientEmail</td>
                <td>@item.ReminderDateTime</td>
                <td>@item.IsSent</td>
            </tr>
        }
    </tbody>
</table>
